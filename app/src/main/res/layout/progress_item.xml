<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_normal"
    android:animateLayoutChanges="true"
    android:id="@+id/progress_item_parent"
    android:background="@drawable/app_barbg"
    android:elevation="4dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_counting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="23Weeks 21Days"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_title_id" />

    <TextView
        android:id="@+id/item_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Year"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.celestial.progress.ui.component.BigProgressBar
        android:id="@+id/item_progress_bar_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_counting" />

    <TextView
        android:id="@+id/item_percent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="@dimen/spacing_small"
        android:text="23%"
        app:layout_constraintBottom_toBottomOf="@+id/item_progress_bar_id"
        app:layout_constraintEnd_toEndOf="@+id/item_progress_bar_id"
        app:layout_constraintTop_toTopOf="@+id/item_progress_bar_id" />


    <TextView
        android:id="@+id/tv_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Start Date : "
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw_noti" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="End Date : "
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/tv_startDate" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/sw_noti" />

    <TextView
        android:id="@+id/tv_act_sdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/tv_startDate"
        app:layout_constraintTop_toTopOf="@+id/tv_startDate" />

    <TextView
        android:id="@+id/tv_act_edate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/expandGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_act_edate,tv_act_sdate,tv_startDate,textView4,sw_noti,view"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/item_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/complete_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/complete_bg"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_small"
        android:text="@string/complete_label"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/item_menu_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgv_widget_chkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/datepick_background"
        app:layout_constraintEnd_toStartOf="@+id/item_menu_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_check"
        android:visibility="gone"
        app:tint="@color/gray" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Notification"
        app:layout_constraintStart_toStartOf="@+id/item_progress_bar_id"
        app:layout_constraintTop_toBottomOf="@+id/item_progress_bar_id"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>


