<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/single_widget_background"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Progress.AppWidgetContainer">

    <Button
        android:id="@+id/btn_swidget_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/appwidget_text"
            android:text="Loading..."
            android:textSize="@dimen/text_normal"
             />

        <TextView
            android:id="@+id/tv_single_widget_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="@dimen/text_nsmall"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/spacing_small"
            android:textAlignment="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_single_widget_dayleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:visibility="gone"
            android:ellipsize="end"/>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbar_single_widget"
        android:progressDrawable="@drawable/progress_drawable"
        android:background="@drawable/progress_background"
        android:layout_marginLeft="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:progress="30"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:visibility="gone"
        android:indeterminate="false"/>

    <RelativeLayout
        android:id="@+id/ly_single_progress_widget_percent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imgv_single_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_single_widget_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="23" />
    </RelativeLayout>


</LinearLayout>