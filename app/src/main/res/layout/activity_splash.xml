<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <com.celestial.progress.ui.component.BigProgressBar
        android:id="@+id/pb_activitysplash"
        android:layout_width="200dp"

        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loading_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/splash_message"
        app:layout_constraintEnd_toEndOf="@+id/pb_activitysplash"
        app:layout_constraintStart_toStartOf="@+id/pb_activitysplash"
        app:layout_constraintTop_toBottomOf="@+id/pb_activitysplash" />

    <TextView
        android:id="@+id/tv_app_name_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        android:textSize="@dimen/text_nlarge"
        app:layout_constraintBottom_toTopOf="@+id/pb_activitysplash"
        app:layout_constraintEnd_toEndOf="@+id/pb_activitysplash"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/pb_activitysplash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />


</androidx.constraintlayout.widget.ConstraintLayout>